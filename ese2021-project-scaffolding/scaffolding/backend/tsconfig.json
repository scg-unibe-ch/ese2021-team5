{
"compilerOptions": {
  "moduleResolution": "node",
  "module": "commonjs",
  "target": "es6",
  "esModuleInterop": true,
  "noImplicitAny": false,
  "removeComments": true,
  "preserveConstEnums": true,
  "outDir": "./build",
  "sourceMap": true
},
"include": ["./src/**/*", "test/test.ts", "test/server.test.ts"],
"exclude": ["node_modules", "**/*.spec.ts"]
}
